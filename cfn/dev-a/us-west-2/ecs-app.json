{
  "Description": "dev-a: LAB - ecs-app Infrastructure",
  "Metadata": {
    "cfn-lint": {
      "config": {
        "ignore_checks": [
          "W10001",
          "W3010"
        ]
      }
    }
  },
  "Resources": {
    "SelfReferencingRule": {
      "Properties": {
        "FromPort": "1",
        "GroupId": {
          "Ref": "nlbPublicSecurityGroup"
        },
        "IpProtocol": "-1",
        "SourceSecurityGroupId": {
          "Ref": "nlbPublicSecurityGroup"
        },
        "ToPort": "65535"
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "TaskDefinition": {
      "Properties": {
        "ContainerDefinitions": [
          {
            "Cpu": 2048,
            "Environment": [
              {
                "Name": "SERVER_NAME",
                "Value": "Desert-Dwellers"
              },
              {
                "Name": "SERVER_PORT",
                "Value": "2456"
              },
              {
                "Name": "WORLD_NAME",
                "Value": "DESERT-DWELLERS-WORLD"
              },
              {
                "Name": "SERVER_PUBLIC",
                "Value": "true"
              },
              {
                "Name": "UPDATE_INTERVAL",
                "Value": "900"
              },
              {
                "Name": "BACKUPS_INTERVAL",
                "Value": "3600"
              },
              {
                "Name": "BACKUPS_DIRECTORY",
                "Value": "/config/backups"
              },
              {
                "Name": "BACKUPS_MAX_AGE",
                "Value": "3"
              },
              {
                "Name": "BACKUPS_DIRECTORY_PERMISSIONS",
                "Value": "755"
              },
              {
                "Name": "BACKUPS_FILE_PERMISSIONS",
                "Value": "644"
              },
              {
                "Name": "CONFIG_DIRECTORY_PERMISSIONS",
                "Value": "755"
              },
              {
                "Name": "WORLDS_DIRECTORY_PERMISSIONS",
                "Value": "755"
              },
              {
                "Name": "WORLDS_FILE_PERMISSIONS",
                "Value": "644"
              },
              {
                "Name": "DNS_1",
                "Value": "1.1.1.1"
              },
              {
                "Name": "DNS_2",
                "Value": "8.8.8.8"
              },
              {
                "Name": "STEAMCMD_ARGS",
                "Value": "validate"
              },
              {
                "Name": "STATUS_HTTP",
                "Value": "true"
              },
              {
                "Name": "STATUS_HTTP_PORT",
                "Value": "80"
              },
              {
                "Name": "SERVER_PASS",
                "Value": "br0d0wn"
              },
              {
                "Name": "PRE_START_HOOK",
                "Value": "curl -sfSL -X POST -H \"Content-Type: application/json\" -d \"{\"username\":\"Valheim\",\"content\":\"Valheim server is starting up.\"}\" \"$DISCORD_WEBHOOK\""
              },
              {
                "Name": "POST_START_HOOK",
                "Value": "curl -sfSL -X POST -H \"Content-Type: application/json\" -d \"{\"username\":\"Valheim\",\"content\":\"Valheim server has completed starting.\"}\" \"$DISCORD_WEBHOOK\""
              },
              {
                "Name": "VALHEIM_LOG_FILTER_CONTAINS_Spawned",
                "Value": "Got character ZDOID from"
              },
              {
                "Name": "ON_VALHEIM_LOG_FILTER_CONTAINS_Spawned",
                "Value": "{ read l; l=${l//*ZDOID from /}; l=${l// :*/}; msg=\"Player $l spawned into the world\"; curl -sfSL -X POST -H \"Content-Type: application/json\" -d \"{\"username\":\"Valheim\",\"content\":\"$msg\"}\" \"$DISCORD_WEBHOOK\"; }"
              }
            ],
            "Essential": true,
            "Image": "lloesche/valheim-server",
            "Memory": 4096,
            "MountPoints": [
              {
                "ContainerPath": "/config",
                "SourceVolume": "data-vol"
              }
            ],
            "Name": "dev-a-ecs-app",
            "PortMappings": [
              {
                "ContainerPort": 2456,
                "Protocol": "udp"
              },
              {
                "ContainerPort": 2457,
                "Protocol": "udp"
              },
              {
                "ContainerPort": 2458,
                "Protocol": "udp"
              },
              {
                "ContainerPort": 80,
                "Protocol": "tcp"
              }
            ]
          }
        ],
        "Cpu": "2048",
        "Family": "dev-a-ecs-app",
        "Memory": "4096",
        "NetworkMode": "awsvpc",
        "RequiresCompatibilities": [
          "FARGATE"
        ],
        "Tags": [
          {
            "Key": "Business",
            "Value": "LAB"
          },
          {
            "Key": "Service",
            "Value": "ecs-app"
          },
          {
            "Key": "ExtendedName",
            "Value": "dev-a-us-west-2-ecs-app"
          },
          {
            "Key": "Component",
            "Value": "ECS"
          }
        ],
        "Volumes": [
          {
            "EFSVolumeConfiguration": {
              "FilesystemId": {
                "Ref": "efsfilesystem"
              },
              "RootDirectory": "/"
            },
            "Name": "data-vol"
          }
        ]
      },
      "Type": "AWS::ECS::TaskDefinition"
    },
    "cluster": {
      "Properties": {
        "ClusterName": "dev-a-ecs-app-cluster",
        "Tags": [
          {
            "Key": "Business",
            "Value": "LAB"
          },
          {
            "Key": "Service",
            "Value": "ecs-app"
          },
          {
            "Key": "ExtendedName",
            "Value": "dev-a-us-west-2-ecs-app"
          },
          {
            "Key": "Component",
            "Value": "ECS-Cluster"
          }
        ]
      },
      "Type": "AWS::ECS::Cluster"
    },
    "dnsRecord": {
      "Properties": {
        "AliasTarget": {
          "DNSName": {
            "Fn::GetAtt": [
              "networkloadbalancer",
              "DNSName"
            ]
          },
          "HostedZoneId": "Z18D5FSROUN65G"
        },
        "Comment": "dev-a-us-west-2-ecs-app domain record",
        "HostedZoneName": "pxg-sandbox-sre.yamww.cloud.",
        "Name": "vh.pxg-sandbox-sre.yamww.cloud",
        "Type": "A"
      },
      "Type": "AWS::Route53::RecordSet"
    },
    "ecsappefsMountTarget0": {
      "Properties": {
        "FileSystemId": {
          "Ref": "efsfilesystem"
        },
        "SecurityGroups": [
          {
            "Ref": "nlbPublicSecurityGroup"
          }
        ],
        "SubnetId": {
          "Fn::ImportValue": "dev-a-ecs-app-privatesubnet1-ID"
        }
      },
      "Type": "AWS::EFS::MountTarget"
    },
    "ecsappefsMountTarget1": {
      "Properties": {
        "FileSystemId": {
          "Ref": "efsfilesystem"
        },
        "SecurityGroups": [
          {
            "Ref": "nlbPublicSecurityGroup"
          }
        ],
        "SubnetId": {
          "Fn::ImportValue": "dev-a-ecs-app-privatesubnet2-ID"
        }
      },
      "Type": "AWS::EFS::MountTarget"
    },
    "ecsappefsMountTarget2": {
      "Properties": {
        "FileSystemId": {
          "Ref": "efsfilesystem"
        },
        "SecurityGroups": [
          {
            "Ref": "nlbPublicSecurityGroup"
          }
        ],
        "SubnetId": {
          "Fn::ImportValue": "dev-a-ecs-app-privatesubnet3-ID"
        }
      },
      "Type": "AWS::EFS::MountTarget"
    },
    "efsfilesystem": {
      "Properties": {
        "FileSystemTags": [
          {
            "Key": "Business",
            "Value": "LAB"
          },
          {
            "Key": "Service",
            "Value": "ecs-app"
          },
          {
            "Key": "ExtendedName",
            "Value": "dev-a-us-west-2-ecs-app"
          }
        ]
      },
      "Type": "AWS::EFS::FileSystem"
    },
    "networkloadbalancer": {
      "Properties": {
        "Scheme": "internet-facing",
        "Subnets": [
          {
            "Fn::ImportValue": "dev-a-ecs-app-privatesubnet1-ID"
          },
          {
            "Fn::ImportValue": "dev-a-ecs-app-privatesubnet2-ID"
          },
          {
            "Fn::ImportValue": "dev-a-ecs-app-privatesubnet3-ID"
          }
        ],
        "Tags": [
          {
            "Key": "Business",
            "Value": "LAB"
          },
          {
            "Key": "Service",
            "Value": "ecs-app"
          },
          {
            "Key": "ExtendedName",
            "Value": "dev-a-us-west-2-ecs-app"
          },
          {
            "Key": "Component",
            "Value": "Load-Balancer"
          }
        ],
        "Type": "network"
      },
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer"
    },
    "nlbPublicSecurityGroup": {
      "Properties": {
        "GroupDescription": "dev-a: ecs-app Public Security Group",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "Description": "public",
            "FromPort": 2456,
            "IpProtocol": "udp",
            "ToPort": 2458
          },
          {
            "CidrIp": "0.0.0.0/0",
            "Description": "public",
            "FromPort": 80,
            "IpProtocol": "tcp",
            "ToPort": 80
          }
        ],
        "Tags": [
          {
            "Key": "Business",
            "Value": "LAB"
          },
          {
            "Key": "Service",
            "Value": "ecs-app"
          },
          {
            "Key": "ExtendedName",
            "Value": "dev-a-us-west-2-ecs-app"
          },
          {
            "Key": "Name",
            "Value": "dev-a-ecs-app-sg"
          }
        ],
        "VpcId": {
          "Fn::ImportValue": "dev-a-ecs-app-vpc-id"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "service": {
      "Properties": {
        "Cluster": {
          "Ref": "cluster"
        },
        "DesiredCount": 1,
        "LaunchType": "FARGATE",
        "LoadBalancers": [
          {
            "ContainerName": "dev-a-ecs-app",
            "ContainerPort": 2456,
            "TargetGroupArn": {
              "Ref": "udp2456tg"
            }
          },
          {
            "ContainerName": "dev-a-ecs-app",
            "ContainerPort": 2457,
            "TargetGroupArn": {
              "Ref": "udp2457tg"
            }
          },
          {
            "ContainerName": "dev-a-ecs-app",
            "ContainerPort": 2458,
            "TargetGroupArn": {
              "Ref": "udp2458tg"
            }
          }
        ],
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "AssignPublicIp": "ENABLED",
            "SecurityGroups": [
              {
                "Ref": "nlbPublicSecurityGroup"
              }
            ],
            "Subnets": [
              {
                "Fn::ImportValue": "dev-a-ecs-app-privatesubnet1-ID"
              },
              {
                "Fn::ImportValue": "dev-a-ecs-app-privatesubnet2-ID"
              },
              {
                "Fn::ImportValue": "dev-a-ecs-app-privatesubnet3-ID"
              }
            ]
          }
        },
        "PlatformVersion": "1.4.0",
        "PropagateTags": "TASK_DEFINITION",
        "SchedulingStrategy": "REPLICA",
        "Tags": [
          {
            "Key": "Business",
            "Value": "LAB"
          },
          {
            "Key": "Service",
            "Value": "ecs-app"
          },
          {
            "Key": "ExtendedName",
            "Value": "dev-a-us-west-2-ecs-app"
          },
          {
            "Key": "Component",
            "Value": "ECS"
          }
        ],
        "TaskDefinition": {
          "Ref": "TaskDefinition"
        }
      },
      "Type": "AWS::ECS::Service"
    },
    "tcp80listener": {
      "Properties": {
        "DefaultActions": [
